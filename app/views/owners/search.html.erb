<h2>Find Owners:</h2>

<% form_tag owners_path, :method => :get do -%>
  <table>
    <tr>
      <th>
        <label for="lastName">Last name:</label>
        <br/> 
        <%= search_field_tag "lastName", params[:lastName], :size => 30, :maxlength => 80 %>
      </th>
    </tr>
    <tr>
      <td><p class="submit"><input type="submit" value="Find Owners"/></p></td>
    </tr>
  </table>
<% end -%>

<br/>
<%= link_to 'Add Owner', new_owner_path %>
